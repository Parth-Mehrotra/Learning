<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parth.mehrotra.sinful.colors"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name=".DashBoardActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExploreShades"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RGBPicker"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".HSVPicker"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".Evaluate" >
        </activity>
        <activity
            android:name=".ShadeDisplay"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".EvaluatePictureFromGallery"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".CameraMiddleMan"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".EvaluatePictureFromCamera" >
        </activity>
        <activity android:name=".MatchDisplay"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".Favorites"
            android:screenOrientation="unspecified" >
        </activity>
    </application>

</manifest>